@model IEnumerable<NCIP.Models.AffectedCommunity>
<h2>Affected Communities Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-condensed" id="affected-communities-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Community.Sitio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project.projectTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Community.Sitio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.projectTitle)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/customScripts")
    <script>
        new Tablesort(document.getElementById('affected-communities-table'));
    </script>
}
