@model IEnumerable<NCIP.ViewModels.ProjectTableViewModel>
<h2>Projects</h2>

<table id="projects-table" class="table-responsive table-striped table-hover table-bordered table-condensed">
    <thead>
        <tr>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.projectTitle)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Person.FullName)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stage.StageName)
            </th>
            <th class="col-sm-1">
                @Html.DisplayNameFor(model => model.projectType)
            </th>
            <th class="col-sm-1">
                @Html.DisplayNameFor(model => model.reference)
            </th>
            <th class="col-sm-1">
                @Html.DisplayNameFor(model => model.timeStamp)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.projectTitle)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FullName)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stage.StageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.projectType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.reference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.timeStamp)
                </td>
            </tr>
        }
    </tbody>

</table>