@model IEnumerable<NCIP.ViewModels.ProjecfileTableViewModel>
<h3>Attached Files</h3>
<table class="table table-striped table-bordered table-condensed" id='project-files-table'>
    <thead>
        <tr>
            <th class="col-lg-7">@Html.DisplayNameFor(model => model.Filename)</th>
            <th class="col-lg-3">Uloader</th>
            <th class="col-sm-1">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Filename, "DownloadFile", "Projectfile", new { pfileID = item.ID }, new { @class = "toplink" })</td>
                
                <td>@Html.DisplayFor(modelItem => item.ApplicationUser.FirstName) @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)</td>
                <td>@Html.ActionLink("Delete", "Delete", "Projectfile", new { id = item.ID }, new { @class = "toplink btn btn-danger" })</td>

            </tr>
        }
    </tbody>
</table>


