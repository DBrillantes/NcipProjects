@model IEnumerable<NCIP.ViewModels.AffectedCommunityTableViewModel>


<h3>Affected Communities</h3>
<table class="table table-striped table-bordered table-condensed" id='affected-communities-table'>
    <thead>
        <tr>
            <th class="col-md-4">@Html.DisplayNameFor(model => model.Community.Barangay.BarangayName)</th>
            <th class="col-md-2">@Html.DisplayNameFor(model => model.Community.Sitio)</th>
            <th class="col-md-3">@Html.DisplayNameFor(model => model.Community.Representative)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem =>item.Community.Barangay.BarangayName)</td>
                <td>@Html.DisplayFor(modelItem =>item.Community.Sitio)</td>
                <td>@Html.DisplayFor(modelItem =>item.Community.Representative)</td>

            </tr>
        }
    </tbody>
</table>

