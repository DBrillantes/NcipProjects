@model NCIP.Models.Community

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Community</h4>
    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Sitio, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Sitio)
            @Html.ValidationMessageFor(model => model.Sitio)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Population, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Population)
            @Html.ValidationMessageFor(model => model.Population)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Representative, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Representative)
            @Html.ValidationMessageFor(model => model.Representative)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BarangayID,  new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("BarangayID", String.Empty)
            @Html.ValidationMessageFor(model => model.BarangayID)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
