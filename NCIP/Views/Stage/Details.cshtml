@model NCIP.ViewModels.StageViewModel
<div class="row">
    <div class="container">
        <h2 class="pull-left">@Html.DisplayFor(model => model.StageName)</h2>
    </div>
    <hr />
    <table class="table table-striped table-hover table-bordered table-condensed" id='projects-in-stage'>
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Project Owner</th>
                <th>Ref Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Projects)
            {
                <tr>
                    <td>@Html.ActionLink(i.projectTitle, "Details", "Project", new { id = i.ID }, null)</td>
                    <td>@Html.DisplayFor(modelItem => i.Company.Name)</td>
                    <td>@Html.DisplayFor(modelItem => i.reference)</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@if (ViewBag.showEditDelete)
{
    <p class="pull-right">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning btn" })
        @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger btn" })
    </p>
}



@section Scripts {
    @Scripts.Render("~/bundles/customScripts")
    <script>
        new Tablesort(document.getElementById('projects-in-stage'));
    </script>
}