@model IEnumerable<NCIP.Models.Attendance>
<h2>Attendance Index</h2>

<br />
<div>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "Create", new { controller = "Meeting", returnURL = @HttpContext.Current.Request.Url.AbsoluteUri }, new { @class = "btn btn-primary" })
    }
</div>
<br />
<table id="attendance-table" class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Community.Sitio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EthnicGroup.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Community.Sitio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EthnicGroup.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meeting.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @Scripts.Render("~/bundles/customScripts")
    <script>
        new Tablesort(document.getElementById('attendance-table'));
    </script>
}